/* pages/userpage/integral/intgral.wxss */
.header {padding: 90rpx 0 50rpx 0;text-align: center;width: 100%; position: relative;z-index:99;border-bottom:20rpx solid #f5f5f5;}
.userbg_box{position:relative;}
.userbg{position:absolute;top:0;left:0;width:100%;z-index: 1}
.header .headpic {width: 200rpx;height: 200rpx;border-radius: 60%;}

.username{font-size:32rpx;color:#000;margin-top:10rpx;}
.userphone{font-size:26rpx;color:#7b7b7b;margin-top:10rpx;}
.integralpage{border:1px solid #ffc1c1;border-radius:25px; padding:10rpx 30rpx; display:flex;width:150rpx;margin:0 auto;justify-content:center;background-color:#fff4f4;margin-top:30rpx;}
.bag{width:22rpx;height:22rpx;vertical-align: bottom;padding-right:10rpx;position:relative;top:5rpx;}
.credits{font-size:22rpx;color:#d35e5c;}

.person-list{display:flex;flex-direction:column;align-items:left}
.list-item{display:flex;flex-direction:row;align-items:center;height:95rpx;justify-content:space-between;}
.item-image{width:30rpx;height:30rpx;padding:10rpx; border: 1px solid #ddd;border-radius:60%;}
.item-text{color:#000;font-size:24rpx;}
.person-line{width:100%;height:2rpx;background:#e5e5e5;}
.user_box{box-sizing:border-box;padding:30rpx;}
