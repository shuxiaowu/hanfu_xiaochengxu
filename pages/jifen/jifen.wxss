/* pages/jifen/jifen.wxss */
.row{display:flex;flex-direction:row;align-items:center}
navigator,text,view{font-family:Helvetica,Tahoma,Arial,"PingFang SC","Hiragino Sans GB","Heiti SC",STXihei,"Microsoft YaHei";box-sizing:border-box}
.fill{width:100%;height:100%;object-fit:cover}
.shop_warps{width:100%;padding-left:35rpx;padding-right:35rpx;padding-top:30rpx;padding-bottom:0rpx}
.shopswiper{width:100%;height:380rpx}
.shopswiper image{width:100%;height:314rpx}
.shop_list_warp{width:100%;justify-content:space-between;flex-wrap:wrap;padding-top:30rpx}
.shop_list_warp .shop_con{width:320rpx;margin-bottom:60rpx}
.shop_list_warp .shop_con .shop_img{width:100%;height:260rpx}
.shop_list_warp .shop_con .shop_info{width:100%;justify-content:space-between;font-size:22rpx;color:#231815}
.shop_list_warp .shop_con .shop_info .name{width:60%;line-height:22rpx}
.shop_list_warp .shop_con .shop_info .heart image{width:17rpx;height:15rpx;margin-bottom:2rpx;margin-right: 3rpx;}
.shop_list_warp .shop_con .shop_info .heart{font-size:18rpx;color:#9fa0a0;}
.shops_my_order{width:100%;height:120rpx;background:#fff;position:fixed;z-index:10;left:0;bottom:0;font-size:26rpx;color:#231815;line-height:26rpx}
.shops_my_order image{width:72rpx;height:72rpx;margin-bottom:14rpx}
.shop_detail_warps{width:100%;padding-left:35rpx;padding-right:35rpx;padding-top:35rpx;padding-bottom:90rpx}
.shop_detail_warps .shopdetail_swiper{width:100%;height:453rpx}
.shop_detail_warps .shopdetail_swiper image{width:100%;height:100%;object-fit:cover}
.shop_detail_warps .detail_names{width:100%;height:166rpx;border-bottom:1px solid #b7b5b5}
.shop_detail_warps .detail_names .names{width:100%;height:36rpx;font-size:36rpx;color:#0e050b;line-height:36rpx}
.shop_detail_warps .require{width:100%;height:26rpx;line-height:26rpx;font-size:26rpx;color:#e2bd5f;margin-top:18rpx}
.shop_detail_warps .require image{width:20rpx;height:18rpx;margin-right:16rpx}
.shop_detail_warps .shopdetail_titles{width:100%;height:100rpx;line-height:100rpx;font-size:30rpx;color:#474747}
.shop_detail_warps .detail_boxs{width:100%}
.shop_detail_warps .detail_boxs image{display:block;width:100%;margin:20rpx auto}

.topic{font-size:28rpx;color:#3c3c3c;margin:10rpx 0 15rpx 0;}
.jf_num{font-size:28rpx;color:#c13b38;margin-right:20rpx;float:left }
.jf_kc{font-size:26rpx;color:#c1c1c1;float:right;}
.heart{overflow:hidden;}