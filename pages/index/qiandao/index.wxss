/* pages/index/qiandao/index.wxss */

.section {
  padding: 30rpx 30rpx;
}

.text_dream {
  width: 100%;
}

.qd_btn {
  background: #c44845;
  color: #fff;
}

/* 预览 */

.prebox_img {
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.preview-warp {
  /* width:33.3%; */
  align-items: center; /*垂直居中*/
  position: relative;
  height: 300rpx;
  overflow: hidden;
  background-color: #fff;
  position: relative;
  z-index: 10;
}

.preview-warp>image {
  height: 100%;
}

/* 上传按钮组 */

.upimg {
  margin: 20rpx auto;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 25px;
  border: 1px solid #000;
  /* border-left: 1px solid #000; */
}

.close_img {
  position: absolute;
  width: 20px;
  height: 20px;
  z-index: 30;
  background-size: 100% 100%;
  top: 0;
  right: 0;
}

.close_img>image {
  width: 100%;
  height: 100%;
}

.position_box {
  padding: 50rpx 0;
}

.position_img {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.position_text {
  display: inline-block;
  padding: 0 0 0 10rpx;
}

.volum_pic, .preview-warp {
  height: 400rpx;
}

.volum_pic {
  width: 100%;
  border: 1px dashed #d4d4d5;
  position: relative;
}

.plusimg {
  position: absolute;
  width: 150rpx;
  height: 100rpx;
  left: 0;
  right: 0;
  top: 50%;
  margin: -50rpx auto 0 auto;
}
