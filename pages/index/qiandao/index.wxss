/* pages/index/qiandao/index.wxss */

.section {
  padding: 30rpx 30rpx;
}

.qd_btn {
  background: #c44845;
  color: #fff;
}

/* 预览 */
.prebox_img{
  overflow: hidden;
  display:flex;
  justify-content: center;
}
.preview-warp {
  /* width:33.3%; */
  align-items: center; /*垂直居中*/
  position: relative;
  height:300rpx;
  overflow: hidden;
  background-color: #fff;
  position:relative;
  z-index: 10;
}
.preview-warp>image{
  height:100%;
}
/* 上传按钮组 */
.upimg{

  margin: 20rpx auto;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius:25px;
  border: 1px solid #000;
  /* border-left: 1px solid #000; */
}
.close_img{
  position: absolute;
  width:20px;
  height: 20px;
  z-index: 30;
  background-size: 100% 100%;
  top: 0;
  right: 0;
}
.close_img>image{
  width: 100%;
  height: 100%;
}