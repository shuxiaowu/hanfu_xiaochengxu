/* pages/active/active.wxss */
.hd_con{padding:30rpx;border-bottom:20rpx solid #f5f5f5}
.hd_con .hd_conimg{width:100%;height:240px;overflow:hidden;border-radius:4px;position:relative;z-index:10;}
.hd_con .hd_conimg>image{width:100%;}
.hd_ps_text{position:absolute;bottom:20rpx;padding:0 15rpx;}
.hd_title{color:#fff;font-size:30rpx;display:inline-block;margin-right:10rpx;}
.hd_bm{display:inline-block;padding:4rpx 10rpx;font-size:24rpx; color:#fff;background-color:#c44845;}


.hd_date{margin-right:30rpx;}
.hd_date,.hd_position{display:inline-block;}
.hd-icon{width:24rpx;height:24rpx;display:inline-block;vertical-align: middle;margin-right:10rpx;}
.hd-icon_ps{width:20rpx;height:24rpx;display:inline-block;vertical-align: middle;margin-right:10rpx}
.hd_text{font-size:24rpx;color:#fff;display:inline-block;}
/*  */
.hd_tp{overflow: hidden;margin:15rpx 0;}
.hd_tp .hd_tp_left{float: left}
.hd_tp_left{width:40%;}
.hd_tp_left,.hd_tp_right{padding:10rpx 0;}

.hd_tp_t1{font-size:30rpx;color:#919191;display:inline-block;}
.hd_tp_t2{font-size:28rpx;color:#c44845;display:inline-block;}
.hd_tp_right{float:right;border-radius:25px;background-color:#ffefef;display:flex;justify-content: right;}
.hd_tp_r1{font-size:24rpx;color:#c44845;padding:0 18rpx;line-height:40rpx;}
.hd_tp_r2,.index{position:relative;width:160rpx}
