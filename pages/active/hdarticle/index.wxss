/* pages/active/hdarticle/index.wxss */
@import "../../../wxParse/wxParse.wxss";
swiper{height:240px!important;}
.slide-image{width:100%;}

.hd_citop{position:relative;padding:20rpx 0;}
.hd_ps_text{position:relative;padding:30rpx 0 30rpx 30rpx;border-bottom:20rpx solid #f5f5f5;}
.hd_title{color:#000;font-size:30rpx;display:inline-block;margin-right:10rpx;}
.hd_bm{display:inline-block;padding:4rpx 10rpx;font-size:24rpx; color:#fff;background-color:#c44845;border-radius:4rpx;}

.hd_cidowm{padding:15rpx 0;}
.hd_date{margin-right:30rpx;}
.hd_date,.hd_position{display:inline-block;}
.hd-icon{width:24rpx;height:24rpx;display:inline-block;vertical-align: middle;margin-right:10rpx;}
.hd-icon_ps{width:20rpx;height:24rpx;display:inline-block;vertical-align: middle;margin-right:10rpx}
.hd_text{font-size:24rpx;color:#666;display:inline-block;vertical-align: middle;}
/*  */
.hd_tp{overflow: hidden;margin:15rpx 0;}
.hd_tp .hd_tp_left{float: left}
.hd_tp_left{width:40%;}
.hd_tp_left,.hd_tp_right{padding:10rpx 0;}

.hd_tp_t1{font-size:30rpx;color:#919191;display:inline-block;}
.hd_tp_t2{font-size:28rpx;color:#c44845;display:inline-block;}
.hd_tp_right{float:right;border-radius:25px;background-color:#ffefef;display:flex;justify-content: right;}
.hd_tp_r1{font-size:24rpx;color:#c44845;padding:0 18rpx;line-height:40rpx;}
.hd_tp_r2,.index{position:relative;width:160rpx}

/*  */
.index {
  width: 100%;
  height: 40rpx;
  position: relative;
  display: flex;
  flex-direction:columnl;
  justify-content: flex-start;
  padding:0 10rpx;
  box-sizing: border-box;
}
 
.index view .text {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: greenyellow;
  border-radius: 50%;
}
view .text:first-of-type {
  transform: translateX(0px);
}

.shar_right{position:absolute;right:0;top:0;border:1px solid #c44845;border-right:none!important;padding:6rpx 20rpx;border-radius:25px 0 0px 25px;}
.link-icon{width:12px;height:12px;padding-right:10rpx;}
.fixed-text{color:#c44845;font-size:24rpx;overflow:none!important; border: none!important;padding:0!important;line-height:20px;}
.dis_line{display:inline-block; vertical-align:middle}
button::after{
    border: 0;
}
.art_title{padding:30rpx;box-sizing:border-box;}
.artt_topic{font-size:30rpx;font-weight:700;color:#000;border-bottom:1px solid #dcdcdc;padding-bottom:20rpx;}
.new_box{padding:0 30rpx;margin-bottom:40rpx;overflow: hidden}
.new_item{width:30%;float:left;margin-right:5%;}
.new_item:nth-child(3n){margin-right:0;}
.item_img{width:100%;}
.item_img>image{width:100%;}
.new_left{float:left;}
.iconnew{width:13px;height:13px;position:absolute;left:0;top:5px;}
.news_topic{text-indent:17px;line-height:22px; font-size:24rpx;color:#000; position:relative;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;overflow: hidden}
.content{font-size:26rpx;color:#666;padding:0 30rpx 20rpx 30rpx;padding-bottom:50px;}
.footbtn{position:fixed;width:100%; bottom:0;height:40px;background-color:#c44845;color:#fff;font-size:14px;line-height:40px;text-align:center;}

